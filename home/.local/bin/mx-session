#!/bin/sh

SESSION=mx-session

if tmux has-session -t $SESSION 2> /dev/null; then
    tmux attach -t $SESSION
    exit 0
fi

tmux new-session -d -s $SESSION -n home "ssh -t ll.it.cx bin/servertje-session"

tmux new-window -t $SESSION:1 -n dev "( cd $HOME/dev ; $SHELL )"
tmux new-window -t $SESSION:2 -n projects "( cd $HOME/Projects ; $SHELL )"

tmux select-window -t $SESSION:1
tmux attach -t $SESSION
